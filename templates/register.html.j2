{% extends "base.html.j2" %}

{% block content %}
<div class="max-w-md mx-auto">
    <h2 class="text-2xl font-semibold mb-4">Register for EduGrok</h2>
    <form action="{{ url_for('register') }}" method="POST">
        <div class="mb-4">
            <label for="email" class="block mb-2">Email:</label>
            <input type="email" name="email" id="email" class="w-full p-2 border rounded" required>
        </div>
        <div class="mb-4">
            <label for="password" class="block mb-2">Password:</label>
            <input type="password" name="password" id="password" class="w-full p-2 border rounded" required>
        </div>
        <div class="mb-4">
            <label for="grade" class="block mb-2">Grade:</label>
            <select name="grade" id="grade" class="w-full p-2 border rounded" required>
                <option value="1">Grade 1</option>
                <option value="2">Grade 2</option>
                <option value="3">Grade 3</option>
            </select>
        </div>
        <div class="mb-4">
            <label for="handle" class="block mb-2">Handle (Username):</label>
            <input type="text" name="handle" id="handle" class="w-full p-2 border rounded" required>
        </div>
        <button type="submit" class="btn-success w-full">Register</button>
    </form>
    <p class="mt-4 text-center">
        Already have an account? <a href="{{ url_for('login') }}" class="text-blue-500 hover:underline">Login here</a>
    </p>
</div>
{% endblock %}