<div class="lesson-card-content">
    <h2 class="text-xl font-semibold text-grok-text mb-2">{{ lesson.title }}</h2>
    <p class="text-grok-secondary text-sm mb-2">Subject: {{ lesson.subject | capitalize }} | Grade: {{ lesson.grade }}</p>
    <p class="text-grok-text mb-4">{{ lesson.description }}</p>
    {% if lesson.activity_type == 'math_fill' %}
        <input id="math-input-{{ lesson.id }}" type="text" placeholder="Enter your answer" class="w-full p-2 border border-grok-border rounded-lg mb-2 focus:outline-none focus:ring-2 focus:ring-grok-accent bg-transparent text-grok-text placeholder-grok-secondary">
        <button onclick="checkMath({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
            <span class="text-lg">‚úîÔ∏è</span>
            <span class="text-sm">Check Answer</span>
        </button>
    {% elif lesson.activity_type == 'match_game' %}
        <button onclick="submitMatch({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
            <span class="text-lg">‚úîÔ∏è</span>
            <span class="text-sm">Submit Match</span>
        </button>
    {% elif lesson.activity_type == 'trace_complete' %}
        <input id="trace-input-{{ lesson.id }}" type="text" placeholder="Trace the word" class="w-full p-2 border border-grok-border rounded-lg mb-2 focus:outline-none focus:ring-2 focus:ring-grok-accent bg-transparent text-grok-text placeholder-grok-secondary">
        <button onclick="checkTrace({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
            <span class="text-lg">‚úîÔ∏è</span>
            <span class="text-sm">Check Trace</span>
        </button>
    {% elif lesson.activity_type == 'spelling_complete' %}
        <input id="spell-input-{{ lesson.id }}" type="text" placeholder="Spell the word" class="w-full p-2 border border-grok-border rounded-lg mb-2 focus:outline-none focus:ring-2 focus:ring-grok-accent bg-transparent text-grok-text placeholder-grok-secondary">
        <button onclick="checkSpelling({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
            <span class="text-lg">‚úîÔ∏è</span>
            <span class="text-sm">Check Spelling</span>
        </button>
    {% elif lesson.activity_type == 'mc_choice' %}
        {% for option in lesson.mc_options %}
            <label class="block text-grok-text mb-1">
                <input type="radio" name="mc-{{ lesson.id }}" value="{{ option }}" class="mr-2">
                {{ option }}
            </label>
        {% endfor %}
        <button onclick="checkMultipleChoice({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
            <span class="text-lg">‚úîÔ∏è</span>
            <span class="text-sm">Check Answer</span>
        </button>
    {% elif lesson.activity_type == 'sentence_complete' %}
        <select id="sentence-select-{{ lesson.id }}" class="w-full p-2 border border-grok-border rounded-lg mb-2 focus:outline-none focus:ring-2 focus:ring-grok-accent bg-transparent text-grok-text">
            <option value="">Select an option</option>
            {% for option in lesson.sentence_options %}
                <option value="{{ option }}">{{ option }}</option>
            {% endfor %}
        </select>
        <button onclick="checkSentence({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
            <span class="text-lg">‚úîÔ∏è</span>
            <span class="text-sm">Check Answer</span>
        </button>
    {% endif %}
    <div class="flex justify-between items-center pt-3">
        <div class="flex space-x-6">
            <button onclick="completeLesson({{ lesson.id }})" class="text-grok-secondary hover:text-green-400 transition flex items-center space-x-1">
                <span class="text-lg">‚úÖ</span>
                <span class="text-sm">Complete Lesson</span>
            </button>
            <button onclick="doAgain({{ lesson.id }})" class="text-grok-secondary hover:text-blue-400 transition flex items-center space-x-1">
                <span class="text-lg">üîÑ</span>
                <span class="text-sm">Do Again</span>
            </button>
        </div>
    </div>
</div>