{% extends "base.html.j2" %}

{% block title %}Weekly Test - EduGrok{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6 text-center text-grok-text">Weekly Test</h1>
    {% if error %}
        <p class="text-red-400 text-center mb-4">{{ error }}</p>
    {% endif %}
    <form method="POST" class="space-y-6">
        {% for q in questions %}
            <div class="card bg-grok-surface p-5 rounded-xl shadow-lg border border-grok-border">
                <p class="text-grok-text text-lg mb-4">{{ q.q }}</p>
                <div class="space-y-2">
                    {% for a in q.a %}
                        <label class="flex items-center space-x-2 text-grok-text">
                            <input type="radio" name="q{{ loop.index }}" value="{{ a }}" {{ 'required' if loop.first }} class="form-radio text-grok-accent focus:ring-grok-accent">
                            <span>{{ a }}</span>
                        </label>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        <div class="text-center">
            <button type="submit" class="bg-grok-accent text-grok-text px-6 py-3 rounded-lg font-semibold hover:bg-grok-accent-hover transition shadow-md">Submit Test</button>
        </div>
    </form>
</div>
{% endblock %}