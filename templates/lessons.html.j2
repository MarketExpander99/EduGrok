{% extends "base.html.j2" %}

{% block content %}
<h2 class="text-2xl font-semibold mb-4">Lessons (Grade {{ grade }})</h2>

{% if lessons %}
    {% for lesson in lessons %}
        <div class="lesson-card">
            <h3>{{ lesson.subject }}</h3>
            <div>{{ lesson.content | safe }}</div>
            <a href="{{ url_for('complete_lesson', lesson_id=lesson.id) }}" class="btn-primary">Complete Lesson</a>
            <a href="{{ url_for('reset_lesson', lesson_id=lesson.id) }}" class="btn-warning ml-2">Do Again</a>
        </div>
    {% endfor %}
{% else %}
    <p>No lessons available for your grade. Try generating a new one!</p>
{% endif %}
{% endblock %}