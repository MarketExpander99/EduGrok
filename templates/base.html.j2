<!DOCTYPE html>
<html lang="{{ language or 'en' }}" class="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}EduGrok{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'grok-bg': '#000000',
                        'grok-surface': '#0a0a0a',
                        'grok-text': '#ffffff',
                        'grok-secondary': '#71767b',
                        'grok-border': '#333333',
                        'grok-accent': '#4b5563', // Dark grey instead of blue
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background-color: #000000; color: #ffffff; }
        h1, h2, h3, h4, h5, h6 { color: #ffffff !important; }
        p { color: #e5e7eb !important; } /* Light gray for better readability on black */
        .sidebar { background-color: #0a0a0a; border-right: 1px solid #333333; }
        .card { background-color: #0a0a0a; border: 1px solid #333333; }
        .btn-primary { background-color: #4b5563; border-color: #4b5563; color: #ffffff; }
        .btn-primary:hover { background-color: #374151; }
        .lesson-card { max-width: 600px; margin: 20px auto; text-align: center; }
        .lesson-nav { display: flex; justify-content: center; gap: 1rem; margin-top: 20px; }
        .lesson-nav button:disabled { opacity: 0.5; cursor: not-allowed; }
    </style>
    {% block head %}{% endblock %}
</head>
<body class="bg-grok-bg text-grok-text min-h-screen flex">
    <!-- Side Menu (X-style) -->
    <nav class="sidebar fixed left-0 top-0 h-full w-64 flex flex-col z-50 -translate-x-full md:translate-x-0 transition-transform duration-300" id="sidebar">
        <div class="p-4 border-b border-grok-border">
            <h1 class="text-xl font-bold text-grok-text">EduGrok</h1>
        </div>
        <ul class="flex-1 p-4 space-y-2">
            <li>
                <a href="{{ url_for('home') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors">
                    <i class="fas fa-home text-grok-accent"></i>
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a href="{{ url_for('lessons') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors">
                    <i class="fas fa-book text-grok-accent"></i>
                    <span>Lessons</span>
                </a>
            </li>
            <li>
                <a href="{{ url_for('phonics_game') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors">
                    <i class="fas fa-gamepad text-grok-accent"></i>
                    <span>Games</span>
                </a>
            </li>
            <li>
                <a href="{{ url_for('profile') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors">
                    <i class="fas fa-user text-grok-accent"></i>
                    <span>Profile</span>
                </a>
            </li>
            <li>
                <a href="{{ url_for('parent_dashboard') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors">
                    <i class="fas fa-chart-bar text-grok-accent"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            {% if user_id %}
            <li>
                <a href="{{ url_for('logout') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors">
                    <i class="fas fa-sign-out-alt text-grok-accent"></i>
                    <span>Logout</span>
                </a>
            </li>
            {% endif %}
        </ul>
        <div class="p-4 border-t border-grok-border">
            <a href="{{ url_for('feedback') }}" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-grok-surface transition-colors w-full">
                <i class="fas fa-comment-dots text-grok-accent"></i>
                <span>Feedback</span>
            </a>
        </div>
    </nav>

    <!-- Overlay for mobile -->
    <div class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden md:hidden" id="overlay"></div>

    <!-- Main Content -->
    <main class="flex-1 ml-0 md:ml-64 p-4 transition-all duration-300">
        <!-- Mobile menu toggle -->
        <button class="md:hidden mb-4 p-2 bg-grok-surface rounded" onclick="toggleSidebar()">
            <i class="fas fa-bars text-grok-text"></i>
        </button>

        {% block content %}{% endblock %}
    </main>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            sidebar.classList.toggle('-translate-x-full');
            overlay.classList.toggle('hidden');
        }

        document.getElementById('overlay').addEventListener('click', toggleSidebar);

        // Close sidebar on window resize if mobile
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                document.getElementById('sidebar').classList.remove('-translate-x-full');
                document.getElementById('overlay').classList.add('hidden');
            }
        });
    </script>

    {% block scripts %}{% endblock %}
</body>
</html>