<!DOCTYPE html>
<html lang="{{ session.language|default('en') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}EduGrok{% endblock %}</title>
    <link href="{{ url_for('static', filename='style.css') }}" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen {{ session.theme|default('astronaut') }} bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-white">
    <header class="bg-white dark:bg-gray-700 p-4 shadow">
        <h1 class="text-3xl font-bold">EduGrok</h1>
        <nav class="mt-2 flex space-x-4">
            <a href="{{ url_for('home') }}" class="text-blue-500 hover:underline">Home</a>
            <a href="{{ url_for('lessons') }}" class="text-blue-500 hover:underline">Lessons</a>
            <a href="{{ url_for('profile') }}" class="text-blue-500 hover:underline">Profile</a>
            <a href="{{ url_for('phonics_game') }}" class="text-blue-500 hover:underline">Phonics Game</a>
            <a href="{{ url_for('logout') }}" class="text-blue-500 hover:underline">Logout</a>
        </nav>
    </header>
    <div class="container mx-auto p-4">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="bg-{{ 'green' if category == 'success' else 'red' }}-100 dark:bg-{{ 'green' if category == 'success' else 'red' }}-800 p-4 mb-4 rounded text-{{ 'green' if category == 'success' else 'red' }}-800 dark:text-{{ 'green' if category == 'success' else 'red' }}-200">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        {% block content %}{% endblock %}
    </div>
    <footer class="bg-white dark:bg-gray-700 p-4 mt-6 text-center text-gray-500 dark:text-gray-400">
        <p>&copy; 2025 EduGrok. All rights reserved.</p>
    </footer>
</body>
</html>