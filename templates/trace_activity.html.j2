{% if not post.completed %}

    
        Trace the word: {{ post.lesson.trace_word }}
        <button type="button" onclick="window.speakQuestion(&#x27;Trace the word: {{ post.lesson.trace_word }}&#x27;, this)" class="ml-2 text-blue-700 hover:text-blue-500 transition" aria-label="Read instruction aloud">
            <i class="fas fa-volume-up text-sm"></i>
        </button>
    
    <canvas id="trace-canvas-{{ post.lesson.id | default(post.id) }}" width="400" height="200" class="border border-blue-300 rounded bg-white mb-2 w-full" style="touch-action: none;"></canvas>
    <button type="button" onclick="window.clearCanvas(&#x27;trace-canvas-{{ post.lesson.id | default(post.id) }}&#x27;)" class="bg-gray-300 text-grok-text px-3 py-1 rounded-md hover:bg-gray-400 transition mr-2">Clear</button>
    <button type="button" onclick="window.submitActivity(event, {{ post.lesson.id | default(post.id) }}, &#x27;trace&#x27;)" data-type="trace" data-value="drawn" class="check-btn bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 transition">Save &#x26; Check</button>

{% else %}

    
    Trace the word: {{ post.lesson.trace_word }} (Completed)

{% endif %}