<!-- Updates: Updated form and labels with grok- classes for theme consistency. Added shadows and transitions to button and inputs for polish. Made the card more responsive. -->

{% extends "base.html.j2" %}

{% block content %}
<div class="card bg-grok-surface p-6 rounded-xl shadow-lg border border-grok-border max-w-md mx-auto">
    <h2 class="text-2xl font-semibold mb-6 text-center text-grok-text">Login to EduGrok</h2>
    <form action="{{ url_for('login') }}" method="POST">
        <div class="mb-4">
            <label for="email" class="block mb-2 text-grok-secondary">Email:</label>
            <input type="email" name="email" id="email" class="w-full p-3 bg-transparent text-grok-text border border-grok-border rounded-lg focus:outline-none focus:ring-2 focus:ring-grok-accent" required>
        </div>
        <div class="mb-6">
            <label for="password" class="block mb-2 text-grok-secondary">Password:</label>
            <input type="password" name="password" id="password" class="w-full p-3 bg-transparent text-grok-text border border-grok-border rounded-lg focus:outline-none focus:ring-2 focus:ring-grok-accent" required>
        </div>
        <button type="submit" class="bg-grok-accent text-grok-text px-4 py-2 rounded-md hover:bg-grok-accent-hover transition w-full shadow-md">Login</button>
    </form>
    <p class="mt-4 text-center text-grok-secondary">
        Don't have an account? <a href="{{ url_for('register') }}" class="text-grok-accent hover:underline">Register here</a>
    </p>
</div>
{% endblock %}