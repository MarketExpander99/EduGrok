<!-- [register_child.html.j2] -->
{% extends "base.html.j2" %}{% block title %}Register Child - EduGrok{% endblock %}{% block content %}<div class="card bg-grok-surface p-6 rounded-xl shadow-lg border border-grok-border max-w-md mx-auto">
    <h2 class="text-2xl font-semibold mb-6 text-center text-grok-text">Register a Child Account</h2>
    <form action="{{ url_for('register_child') }}" method="POST">
        <div class="mb-4">
            <label for="email" class="block mb-2 text-grok-secondary">Child's Email:</label>
            <input type="email" name="email" id="email" class="w-full p-3 bg-transparent text-grok-text border border-grok-border rounded-lg focus:outline-none focus:ring-2 focus:ring-grok-accent" required aria-describedby="email-help">
            <small id="email-help" class="text-grok-secondary text-sm">Enter a valid email address for the child.</small>
        </div>
        <div class="mb-4">
            <label for="password" class="block mb-2 text-grok-secondary">Password:</label>
            <input type="password" name="password" id="password" class="w-full p-3 bg-transparent text-grok-text border border-grok-border rounded-lg focus:outline-none focus:ring-2 focus:ring-grok-accent" required aria-describedby="password-help">
            <small id="password-help" class="text-grok-secondary text-sm">Minimum 6 characters. You'll manage this for your child.</small>
        </div>
        <div class="mb-4">
            <label for="grade" class="block mb-2 text-grok-secondary">Grade:</label>
            <select name="grade" id="grade" class="w-full p-3 bg-transparent text-grok-text border border-grok-border rounded-lg focus:outline-none focus:ring-2 focus:ring-grok-accent" required>
                <option value="1">Grade 1</option>
                <option value="2">Grade 2</option>
                <option value="3">Grade 3</option>
            </select>
        </div>
        <div class="mb-6">
            <label for="handle" class="block mb-2 text-grok-secondary">Handle (Username):</label>
            <input type="text" name="handle" id="handle" class="w-full p-3 bg-transparent text-grok-text border border-grok-border rounded-lg focus:outline-none focus:ring-2 focus:ring-grok-accent" placeholder="Optional username">
        </div>
        <button type="submit" class="bg-grok-accent text-grok-text px-4 py-2 rounded-md hover:bg-grok-accent-hover transition w-full shadow-md">Register Child</button>
    </form>
    <p class="mt-4 text-center text-grok-secondary">
        <a href="{{ url_for('profile') }}" class="text-grok-accent hover:underline">Back to Profile</a>
    </p>
</div>
{% endblock %}


