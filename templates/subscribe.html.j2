{% extends "base.html.j2" %}

{% block title %}Subscribe - EduGrok{% endblock %}

{% block content %}
<div class="max-w-md mx-auto p-6">
    <div class="card bg-grok-surface p-5 rounded-xl shadow-lg border border-grok-border hover:-translate-y-1 hover:shadow-xl transition-all duration-200">
        <h1 class="text-3xl font-bold mb-6 text-center text-grok-text">Subscribe for Premium Content</h1>
        <p class="text-grok-secondary mb-4 text-center">Unlock premium features for $5/month!</p>
        <form method="POST" action="{{ url_for('subscribe') }}">
            <button type="submit" class="bg-grok-accent text-grok-text px-8 py-4 rounded-xl font-semibold hover:bg-grok-accent-hover transition-all duration-200 shadow-lg w-full">Subscribe Now</button>
        </form>
        <p class="mt-4 text-center text-grok-secondary">
            <a href="{{ url_for('home') }}" class="text-grok-accent hover:underline">Back to Home</a>
        </p>
    </div>
</div>
{% endblock %}