<!-- Updates: Added Tailwind for better styling, used grok- classes for theme consistency. Improved button with shadow and transition. Made page more responsive. -->

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="UTF-8">
    <title>Subscribe to EduGrok</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'grok-bg': 'var(--grok-bg)',
                        'grok-surface': 'var(--grok-surface)',
                        'grok-text': 'var(--grok-text)',
                        'grok-secondary': 'var(--grok-secondary)',
                        'grok-border': 'var(--grok-border)',
                        'grok-accent': 'var(--grok-accent)',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            --grok-bg: #000000;
            --grok-surface: #0a0a0a;
            --grok-text: #ffffff;
            --grok-secondary: #71767b;
            --grok-border: #333333;
            --grok-accent: #4b5563;
            --grok-accent-hover: #374151;
            background-color: var(--grok-bg);
            color: var(--grok-text);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-3xl font-bold mb-6">Subscribe for Premium Content ($5/month)</h1>
        <form method="POST">
            <button type="submit" class="bg-grok-accent text-grok-text px-8 py-4 rounded-xl font-semibold hover:bg-grok-accent-hover transition-all duration-200 shadow-lg hover:shadow-xl">Subscribe Now</button>
        </form>
    </div>
</body>
</html>