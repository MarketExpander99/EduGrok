<!-- New: Extracted sentence completion activity section. Similar to MC but for sentence options. Uses selectMcOption with 'sentence' type. -->
<!-- Fix: Removed hardcoded 'opacity-50 disabled-activity' classes and 'disabled' attrsâ€”main JS now enables everything. -->
{% if not post.completed %}
<div class="activity-section p-3 bg-blue-50 rounded-lg border border-blue-200" data-type="sentence">
    <div class="flex items-center mb-2">
        <h4 class="text-blue-700 font-medium flex-grow">{{ post.lesson.sentence_question }}</h4>
        <button type="button" onclick="window.speakQuestion('{{ post.lesson.sentence_question }}', this)" class="ml-2 text-blue-700 hover:text-blue-500 transition" aria-label="Read question aloud">
            <i class="fas fa-volume-up text-sm"></i>
        </button>
    </div>
    {% set options = (post.lesson.sentence_options if post.lesson.sentence_options is iterable and not post.lesson.sentence_options is string else []) %}
    <input type="hidden" name="sentence{{ post.lesson.id | default(post.id) }}" id="sentence-hidden-{{ post.lesson.id | default(post.id) }}" value="">
    <div class="space-y-2">
        {% for option in options %}
            <button type="button" class="mc-btn w-full text-left p-3 border border-grok-border rounded bg-white text-gray-900 hover:bg-grok-accent transition text-grok-text" data-value="{{ option }}" onclick="window.selectMcOption('{{ post.lesson.id | default(post.id) }}', this, '{{ option }}', 'sentence')">
                <span class="font-semibold">{% if options|length <= 4 %}{{ 'A' if loop.index0 == 0 else 'B' if loop.index0 == 1 else 'C' if loop.index0 == 2 else 'D' }}{% endif %}</span>. {{ option }}
            </button>
        {% endfor %}
    </div>
    <button type="button" onclick="window.submitActivity(event, {{ post.lesson.id | default(post.id) }}, 'sentence')" data-type="sentence" class="check-btn bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 mt-2 transition">Check</button>
</div>
{% else %}
<div class="activity-section p-3 bg-green-50 rounded-lg border border-green-200" data-type="sentence">
    <h4 class="text-green-700 font-medium">{{ post.lesson.sentence_question }} (Completed)</h4>
</div>
{% endif %}